<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dirtywhite"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.7"
        android:background="@color/lightpink"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight=".8"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/image_button_sendAlert"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@color/darkpurple"
            android:contentDescription="@string/contact_description"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_sendalert" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="0.9"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_button_searchByGPS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@color/lightpurple"
            android:contentDescription="@string/searchGPS_description"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_searchbygps" />


        <ImageButton
            android:id="@+id/image_button_searchByParty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@color/lightpurple"
            android:contentDescription="@string/searchParty_description"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_searchbyparty" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="0.9"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_button_FAQs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@color/lightpurple"
            android:contentDescription="@string/usefulInformation_description"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_usefulinformation" />

        <ImageButton
            android:id="@+id/image_button_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@color/lightpurple"
            android:contentDescription="@string/searchParty_description"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_sendcontact" />
    </LinearLayout>

</LinearLayout>